<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:layout_centerHorizontal="true"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="374dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/firstname"
                android:layout_width="100dp"
                android:layout_height="20dp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:text="First Name:"
                android:textSize="15dp" />

            <EditText
                android:id="@+id/firstName"
                android:layout_width="200dp"
                android:layout_height="45dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/lastname"
                android:layout_width="100dp"
                android:layout_height="20dp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="5dp"
                android:text="Last Name:"
                android:textSize="15dp" />

            <EditText
                android:id="@+id/lastName"
                android:layout_width="200dp"
                android:layout_height="45dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/passphrase"
                android:layout_width="100dp"
                android:layout_height="20dp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="5dp"
                android:text="Passphrase:"
                android:textSize="15dp" />

            <EditText
                android:id="@+id/passPhrase"
                android:layout_width="200dp"
                android:layout_height="45dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">

        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/country"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="148dp"
        android:layout_toStartOf="@+id/spinnerClass"
        android:text="Country:"
        android:textSize="15dp" />

    <Spinner
        android:id="@+id/spinnerCountry"
        android:layout_width="180dp"
        android:layout_height="30dp"
        android:layout_alignStart="@+id/rWindow"
        android:layout_alignTop="@+id/country" />

    <TextView
        android:id="@+id/Class"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/country"
        android:layout_marginTop="191dp"
        android:text="Class:"
        android:textSize="15dp" />

    <Spinner
        android:id="@+id/spinnerClass"
        android:layout_width="180dp"
        android:layout_height="30dp"
        android:layout_alignStart="@+id/spinnerCountry"
        android:layout_alignTop="@+id/Class">

    </Spinner>

    <TextView
        android:id="@+id/seat"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/country"
        android:layout_marginTop="228dp"
        android:text="Seat:"
        android:textSize="15dp" />

    <RadioButton
        android:id="@+id/rWindow"
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/seat"
        android:layout_gravity="center"
        android:layout_marginEnd="67dp"
        android:text="Window"
        android:textSize="10dp" />

    <RadioButton
        android:id="@+id/rAisle"
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/rWindow"
        android:layout_marginBottom="213dp"
        android:text="Aisle"
        android:textSize="10dp" />

    <RadioButton
        android:id="@+id/rDontCare"
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/rWindow"
        android:layout_marginBottom="173dp"
        android:text="Don't care"
        android:textSize="10dp" />

    <TextView
        android:id="@+id/luggage"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_alignStart="@+id/country"
        android:layout_alignTop="@+id/seekbarLuggage"
        android:text="Luggage:"
        android:textSize="15dp" />

    <SeekBar
        android:id="@+id/seekbarLuggage"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="131dp"
        android:layout_toEndOf="@+id/country" />

    <CheckBox
        android:id="@+id/Vegetarian"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="93dp"
        android:layout_toEndOf="@+id/country"
        android:gravity="center"
        android:text="Vegetarian" />

    <Button
        android:id="@+id/PlaceReservationBtn"
        android:layout_width="350dp"
        android:layout_height="30dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="44dp"
        android:text="Place Reservation"
        android:textColor="#ffffff"
        android:background="#990101"/>
</RelativeLayout>